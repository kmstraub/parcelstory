<% if current_user %>
<div class="jumbotron">
  <span><strong><%= @user.first_name %> <%= @user.last_name %></span></strong>
  <div><%= link_to edit_user_path(@user) do %>
    <span class="glyphicon glyphicon-edit pull-right"></span>
    <% end %>
  </div>
</div>
<ul class="nav nav-tabs">
  <li class="active"><a href="#books" data-toggle="tab"><%= @user.books.size %> Books</a></li>

  <li><a href="#subscriptions" data-toggle="tab"><%= @subscribing.size %> Subscriptions</a></li>
</ul>
<div class="tab-content">
  <div class="tab-pane active area" id="books">
    <div id="logs" class="transitions-enabled">
      <div id= "info" class="area panel panel-default">
        <div class="panel-body">
          <p>Books are linked to parcels. <br>To create a new book, go to the parcel you would like to link it to.  <%= link_to parcels_path do %>
          <span class="glyphicon glyphicon-globe"></span>
           <% end %></p>
         
        </div>
      </div>
     <% @user.books.each do |book| %>
      <div class="box panel panel-default">
        <div class="panel-body">
          <div><%= link_to book do %>
          <span class="glyphicon glyphicon-book pull-right"></span>
           <% end %>
          </div>
          <p> <strong><%= book.title %></strong></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="tab-pane" id="subscriptions">
    <div id="info" class="area panel panel-default">
        <div class="panel-body">
          <p>Subscriptions are links to parcels you have subscribed to.</p>
        </div>
      </div>
    <div id="logs" class="transitions-enabled">
      <div class="box panel panel-default">
        <div class="panel-body">
          <% @subscribing.each do |subscription| %>
          <p><%= link_to parcel_path subscription.parcel do %>
              <span class="glyphicon glyphicon-link"></span>
            <% end %>
          
          <%= subscription.parcel.address %>
        </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  <% end %>


