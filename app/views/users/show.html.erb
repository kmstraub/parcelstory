<% if current_user %>
<div class="jumbotron">
  <span><strong><%= @user.first_name %> <%= @user.last_name %></span></strong>
  <div><%= link_to edit_user_path(@user) do %>
    <span class="glyphicon glyphicon-pencil pull-right"></span>
    <% end %>
  </div>
</div>
<ul class="nav nav-pills" id="myPill">
  <li ><a href="#books" data-toggle="pill"></a></li>
  <li><a href="#logs" data-toggle="pill"> </a></li>

  <li><a href="#followers" data-toggle="pill"> Followers</a></li>
  <li><a href="#following" data-toggle="pill">Following</a></li>
</ul>
<div class="pill-content">
  <div class="pill-pane active fade" id="books">
    <div class="well">
    </div>
  </div>
  <div class="pill-pane fade" id="logs">
    <div id="logs" class="transitions-enabled">
     
      <div class="box panel panel-default">
        <div class="panel-body">
          <p> </p>
            <p><a href="<%= user_path  %>">
            <span class="name"><%= @user.first_name %> <%= @user.last_name %></span></a>
            <span class="spacing"> @<%= @user.username %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="pill-pane fade" id="followers">
  </div>
  <div class="pill-pane fade" id="following">
  </div>
</div>
<%= link_to 'Back', users_path %>

<% end %>

