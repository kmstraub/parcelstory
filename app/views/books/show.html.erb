<% if current_user %>
<div class="jumbotron">
  <h2 class="center"><%= @book.title%><br>
  <small><%= @book.body %></small></h2>
  <div class="center"><small>Click here to discover what parcel this book is linked to.</small><%= link_to parcel_path(@parcel) do %> <span class="glyphicon glyphicon-link"> <% end %> </div> 
  <div><%= link_to book_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <span class="glyphicon glyphicon-remove-sign pull-right"></span>
    <% end %>
  </div>
  <div><%= link_to edit_book_path(@book) do %>
    <span class="glyphicon glyphicon-edit pull-right"></span>
    <% end %>
  </div>
</div>
<% end %>
<div class="well">
	<%= render 'form_story' %>
</div>
<div id="logs" class="transitions-enabled">
  <% @stories.each do |story| %>
   <div class="box panel panel-default">
    <%= image_tag story.image.url %>
    <div class="panel-body">
      <p><%= simple_format story.body %></p>
      <p><%= simple_format story.source %></p>
      <div><%= link_to [story.book, story], method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-remove-sign pull-right"></span>
        <% end %>
      </div>
      <div><%= link_to [story.book, story] do %>
        <span class="glyphicon glyphicon-info-sign pull-right"></span>
        <% end %>
      </div>
  </div>
   </div>
  <% end %>
</div>
</div>

