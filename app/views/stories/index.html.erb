<h1>Listing stories</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Story type</th>
      <th>Source</th>
      <th>User</th>
      <th>Book</th>
      <th>Parcel</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.body %></td>
        <td><%= story.story_type %></td>
        <td><%= story.source %></td>
        <td><%= story.user %></td>
        <td><%= story.book %></td>
        <td><%= story.parcel %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

